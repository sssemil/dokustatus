DATABASE_URL=postgres://user:password@localhost/reauth
RUST_LOG="reauth_api=debug,tower_http=debug,sqlx=warn"
REFRESH_TOKEN_TTL_DAYS="30"
JWT_SECRET=replace_this_with_a_random_secret
APP_ORIGIN=http://localhost:3000
# Resend API key for the main domain (seeded at startup)
REAUTH_DEV_RESEND_API_KEY=
MAGIC_LINK_TTL_MINUTES=15
CORS_ORIGIN=http://localhost:3000
REDIS_URL=redis://localhost:6379
RATE_LIMIT_WINDOW_SECS=60
RATE_LIMIT_PER_IP=60
RATE_LIMIT_PER_EMAIL=30

# Local dev with TLS (via Caddy in Docker)
# BIND_ADDR must be 0.0.0.0 for Docker to reach the API
BIND_ADDR=0.0.0.0:3001
INGRESS_DOMAIN=ingress.reauth.test
DNS_SERVER=127.0.0.1:5354
MAIN_DOMAIN=reauth.test

# Fallback auth config (required - service won't start without these)
FALLBACK_RESEND_API_KEY=your_resend_api_key
FALLBACK_EMAIL_DOMAIN=mail.yourdomain.com
FALLBACK_GOOGLE_CLIENT_ID=your_google_client_id
FALLBACK_GOOGLE_CLIENT_SECRET=your_google_client_secret
